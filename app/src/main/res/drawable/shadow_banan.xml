<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <gradient android:startColor="#ddd" android:endColor="#C6DCCFCF" android:type="linear" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:right="0.5dp" android:left=".5dp" android:bottom="2dp" android:top=".5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>