<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Func.MyActivity"
    tools:ignore="MergeRootFrame">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shadow"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tennhahangg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/menutren"
            android:text="Đang nhận diện nhà hàng! Đợi tý ^^"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="@dimen/size5dp"
            android:textStyle="bold"
            android:singleLine="false"
            android:textSize="20sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            android:layout_height="match_parent">
            <GridView
                android:id="@+id/gvHienBanAnKhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:numColumns="1"

                >

            </GridView>

            <LinearLayout
                android:id="@+id/bt_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_blue_corner_top"
                android:orientation="vertical">
                <com.google.android.gms.ads.doubleclick.PublisherAdView
                    android:id="@+id/ad_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/ad_unit_id" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="14dp">

                    <LinearLayout
                        android:id="@+id/btn_hdsdkhach"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/huongdan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="HƯỚNG DẪN SỬ DỤNG"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_gioithieu_Khach"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/goicuoc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="THÔNG TIN ỨNG DỤNG"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:id="@+id/btn_kiemtra"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/kiemtra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Thông tin\ngói cước"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_pbkhach"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/meosd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Phiên bản\ncho khách"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
