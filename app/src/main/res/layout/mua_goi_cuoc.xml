<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/nenmoi"
    android:layout_height="match_parent"
    tools:context=".read_webview">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/ll_main_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_white"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingEnd="12dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Chọn gói cước"
            android:textColor="@color/blue"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Mã nhà hàng"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <RelativeLayout
            android:id="@+id/rl_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edMaNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/drawable_left_res"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/blue"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_1"
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Chọn gói cước"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:weightSum="9">

            <RadioGroup
                android:id="@+id/gr1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/gc_basic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="3"
                    android:buttonTint="@color/blue"
                    android:text="Basic"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:theme="@style/Widget.AppCompat.CompoundButton.CheckBox" />

                <RadioButton
                    android:id="@+id/gc_stander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:buttonTint="@color/blue"
                    android:text="Standard"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:theme="@style/Widget.AppCompat.CompoundButton.CheckBox" />

                <RadioButton
                    android:id="@+id/gc_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:buttonTint="@color/blue"
                    android:text="Premium"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:theme="@style/Widget.AppCompat.CompoundButton.CheckBox" />

            </RadioGroup>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Giá gói"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_close_en"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@id/iv_close"
                android:layout_toLeftOf="@id/iv_close"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/drawable_motthang"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/blue"
                android:textSize="12dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/blue">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Số tháng"

            android:textColor="@color/blue"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edSoThang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/drawable_thang"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/blue"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/blue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Tổng tiền (đã trừ khuyến mãi nếu có)"

            android:textColor="@color/blue"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edtongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/transparent"
                android:digits="0123456789"
                android:drawableLeft="@drawable/drawable_tong"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/blue"
                android:textSize="12dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Giảm ngay 200.000 khi mua gói bất kỳ trên 6 tháng"

            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_taoma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/login_en_yellow"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Tạo lệnh"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="13dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_medium"
            android:text="Tạo lệnh thành công!"
            android:textColor="@color/colorOrganButton"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/lenhchuyentien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Số tài khoản:"
            android:textColor="@color/blue"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/txt6"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"

                android:fontFamily="@font/montserrat_medium"
                android:text="11671277"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"/>
            <ImageButton
                android:id="@+id/btn_copy0"
                android:layout_marginLeft="12dp"
                android:layout_width="21dp"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"
                android:background="@color/transparent"
                android:src="@drawable/copy"
                android:layout_height="21dp">

            </ImageButton>

        </LinearLayout>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Ngân hàng thương mại cổ phần Á châu (ACB)\n\nChủ TK: Nguyễn Văn Thành\n\nNội dung chuyển khoản:"
            android:textColor="@color/blue"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/txt3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"

                android:fontFamily="@font/montserrat_medium"
                android:text="Tạo lệnh thành công!"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />
            <ImageButton
                android:id="@+id/btn_copy1"
                android:layout_marginLeft="12dp"
                android:layout_width="21dp"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"
                android:background="@color/transparent"
                android:src="@drawable/copy"
                android:layout_height="21dp">

            </ImageButton>

        </LinearLayout>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Sau khi hệ thống nhận được lệnh chuyển khoản với nội dung như trên sẽ kích hoạt/gia hạn cho quý khách trong vòng 1->4 giờ làm việc!"
            android:textColor="@color/blue"
            android:textSize="14dp" />
        <Button
            android:id="@+id/btn_xacnhanchuyentien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/login_en_yellow"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Xác nhận đã chuyển"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="13dp" />


    </LinearLayout>



</ScrollView>
