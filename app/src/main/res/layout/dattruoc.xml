<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:id="@+id/actionBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#145399">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/ic_back_per"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/ttsdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="SDT"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="8dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/hinhloadve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support">
        </ImageView> />

        <EditText
            android:id="@+id/edndg"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textColorHint="@color/colorBlack"
            android:hint="Thời gian bạn sẽ tới/ dự kiến số người"
            android:layout_height="wrap_content">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="100dp">
            <Button
                android:id="@+id/btngoidt"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/login_en_yellow"
                android:text="Gọi đặt trước"
                android:layout_margin="15dp"
                android:layout_weight="1"

                android:layout_gravity="center_horizontal"

                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="13dp"
                />

            <Button
                android:id="@+id/bntnhannd"
                android:layout_width="120dp"
                android:layout_marginLeft="50dp"
                android:layout_height="40dp"
                android:background="@drawable/login_en_yellow"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="13dp"
                android:text="Gửi yêu cầu" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>