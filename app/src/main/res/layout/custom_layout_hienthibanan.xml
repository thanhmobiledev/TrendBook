<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="2dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/txtTenBanAn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/size100dp"
        android:src="@drawable/banan"
        android:layout_height="96dp"
        android:layout_below="@+id/txtTenBanAn"

        />

    <ImageView

        android:id="@+id/imGoiMon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_input_add"
        android:layout_below="@+id/imBanAn"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/imThanhToan"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/req"
        android:layout_below="@+id/imBanAn"
        android:layout_toRightOf="@+id/imGoiMon"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/imAnButton"
        android:padding="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imBanAn"
        android:src="@drawable/xx"
        android:layout_toRightOf="@+id/imThanhToan"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        />

</RelativeLayout>