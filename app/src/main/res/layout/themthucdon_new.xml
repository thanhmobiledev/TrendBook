<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/nenmoi"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/ll_main_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="20dp"
            android:paddingEnd="12dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txttd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Thêm thực đơn"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawablePadding="@dimen/size10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Tên món"
                android:drawableLeft="@drawable/drawable_left_res"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:layout_marginLeft="8dp" />

            <RelativeLayout
                android:id="@+id/rl_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/edThemTenMonAn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"

                    android:drawablePadding="5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line_1"
                android:layout_width="match_parent"

                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/blue" />

            <TextView
                android:drawableLeft="@drawable/drawable_left_user"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/size10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Giá tiền"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:layout_marginLeft="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <EditText
                    android:id="@+id/edThemGiaTien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:layout_marginEnd="10dp"
                    android:background="@color/transparent"
                    android:drawablePadding="5dp"
                    android:numeric="decimal"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:textSize="12dp"

                    android:layout_marginRight="10dp"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/line_2"
                android:layout_width="match_parent"

                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/blue" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/spinLoaiMonAn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shadow_new"
                    android:textColor="@color/blue">

                </Spinner>

                <ImageButton
                    android:id="@+id/imThemLoaiThucDon"
                    android:layout_width="50dp"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="@color/colorWhite"

                    />

            </LinearLayout>




            <ImageView
                android:id="@+id/imHinhThucDon"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="180dp"
                android:src="@drawable/addimage">

            </ImageView>

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnThoatThemMonAn"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_en_yellow"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="Hủy"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="13dp" />
                <Button
                    android:id="@+id/btnDongYThemMonAn"

                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_en_yellow"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="Thêm"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="?selectableItemBackground"
                android:fontFamily="@font/montserrat_medium"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/quenmatkhau"
                android:textColor="@color/blue"
                android:textSize="11dp"
                android:visibility="gone"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>